    # create the score label
    MDLabel:
        id: score
        font_size: "30sp"
        text: "X goes first!"
        halign: "center"
        pos_hint: {"center_y": .25 }
    
    MDRaisedButton:
        id: restart
        text: "Restart Game"
        pos_hint: {'center_x': .35, 'center_y': .15}
        on_release: app.restart()
    
    MDRaisedButton:
        id: exit
