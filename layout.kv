

# create a base Layout
MDFloatLayout:
    # MDTopAppBar:
    #     title: "App bar"
    # create a header text
    MDLabel:
        id: header
        font_size: "38sp"
        color: "yellow"
        text: "Tic Tac Toe with KivyMD"
        halign: "center"
        pos_hint: {"center_y": .95 }

    MDLabel:
        id: copyright
        font_size: "18sp"
        color: "yellow"
        text: "2022 Â© by S3R43o3"
        halign: "center"
        pos_hint: {"center_y": .9 }


    # create the gamefield
    MDGridLayout:
        size_hint: .5,.5
        pos_hint: {'center_x': .5, 'center_y': .6}
        cols: 3

        #create the buttons for X or O
        Button:
            id: btn1
